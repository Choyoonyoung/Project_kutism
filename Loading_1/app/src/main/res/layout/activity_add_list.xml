<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    tools:context=".AddListActivity"
    android:orientation="vertical"
    android:background="#ffff"
    >

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="421dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/btn1"
            android:layout_width="10dp"
            android:layout_height="55dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:button="@drawable/chicken" />

        <RadioButton
            android:id="@+id/btn2"
            android:layout_width="10dp"
            android:layout_height="55dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:button="@drawable/hamburger" />

        <RadioButton
            android:id="@+id/btn3"
            android:layout_width="10dp"
            android:layout_height="55dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:button="@drawable/pizza" />

        <RadioButton
            android:id="@+id/btn4"
            android:layout_width="10dp"
            android:layout_height="55dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:button="@drawable/d" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="장소"
            android:textSize="20dp"
            android:textColor="#000000"/>

        <Spinner
            android:id="@+id/spinner_place"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:dropDownWidth="wrap_content"
            android:prompt="@string/place_prompt"
            android:spinnerMode="dropdown"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="성별"
            android:textSize="20dp"
            android:textColor="#000000"/>

        <Spinner
            android:id="@+id/spinner_gender"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:prompt="@string/gender_prompt"
            android:spinnerMode="dropdown"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="212dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_time"
            android:layout_width="49dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:prompt="@string/time_prompt"
            android:spinnerMode="dropdown"
            android:visibility="visible" />

        <EditText
            android:id="@+id/input_time"
            android:layout_width="10dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="시"
            android:textColor="#000000"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button9"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="200dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/finish"
            android:onClick="onFinish2Clicked" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/popbtn"
            android:onClick="onSubmitClicked"
            android:text="추가하기" />

    </LinearLayout>

</LinearLayout>