<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true"
        android:drawable="@color/pressed">
        <shape>
            <corners android:radius="5dp" />
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />

            <!-- 테두리 설정: 두께, 색상 -->
            <stroke
                android:width="5dp"
                android:color="#ff0000" />
        </shape>
        </item>
    <item android:state_pressed="true"
        android:drawable="@color/pressed">
    <shape>
        <corners android:radius="5dp" />
        <padding
            android:bottom="8dp"
            android:left="8dp"
            android:right="8dp"
            android:top="8dp" />

        <!-- 테두리 설정: 두께, 색상 -->
        <stroke
            android:width="5dp"
            android:color="#ff0000" />
    </shape>
    </item>
    <item android:state_focused="true"
        android:drawable="@color/focused">
    <shape>
        <corners android:radius="5dp" />
        <padding
            android:bottom="8dp"
            android:left="8dp"
            android:right="8dp"
            android:top="8dp" />

        <!-- 테두리 설정: 두께, 색상 -->
        <stroke
            android:width="5dp"
            android:color="#ff0000" />
    </shape>
    </item>
    <item android:drawable="@color/none">
        <shape>
            <corners android:radius="5dp" />
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />

            <!-- 테두리 설정: 두께, 색상 -->
            <stroke
                android:width="5dp"
                android:color="#ff0000" />
        </shape>
    </item>
</selector>
